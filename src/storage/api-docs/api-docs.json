{
    "openapi": "3.0.0",
    "info": {
        "title": "Yomuhoudai API",
        "description": "API for managing Yomuhoudai book tracker",
        "contact": {
            "email": "kaandesu00@gmail.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/books": {
            "get": {
                "tags": [
                    "Books"
                ],
                "summary": "Get all books",
                "description": "Retrieve a list of all books",
                "operationId": "8e67fc126a51598255c56d362d50466e",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Book"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Books"
                ],
                "summary": "Create a new book",
                "description": "Creates a new book record in the database",
                "operationId": "8ceaae4304444ed201b0f8fd0e21d4b5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "author"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "The Great Gatsby"
                                    },
                                    "author": {
                                        "type": "string",
                                        "example": "F. Scott Fitzgerald"
                                    },
                                    "status": {
                                        "type": "string",
                                        "example": "completed"
                                    },
                                    "categories": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "currentPage": {
                                        "type": "integer",
                                        "example": 100
                                    },
                                    "cover": {
                                        "type": "string",
                                        "example": "url_to_cover_image"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "A novel about the American dream."
                                    },
                                    "pageCount": {
                                        "type": "integer",
                                        "example": 200
                                    },
                                    "publishedDate": {
                                        "type": "string",
                                        "example": "1925-04-10"
                                    },
                                    "rating": {
                                        "type": "integer",
                                        "example": 8
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Book created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Book"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/v1/books/store": {
            "post": {
                "tags": [
                    "Books"
                ],
                "summary": "Store a new book",
                "description": "Stores a newly created book",
                "operationId": "952942ab3c7741da1c4afc99418688b5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "author"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "The Catcher in the Rye"
                                    },
                                    "author": {
                                        "type": "string",
                                        "example": "J.D. Salinger"
                                    },
                                    "status": {
                                        "type": "string",
                                        "example": "ongoing"
                                    },
                                    "categories": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "currentPage": {
                                        "type": "string",
                                        "example": "150"
                                    },
                                    "cover": {
                                        "type": "string",
                                        "example": "url_to_cover_image"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "A novel about teenage angst."
                                    },
                                    "pageCount": {
                                        "type": "integer",
                                        "example": 277
                                    },
                                    "publishedDate": {
                                        "type": "string",
                                        "example": "1951-07-16"
                                    },
                                    "rating": {
                                        "type": "integer",
                                        "example": 9
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Book created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Book"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/v1/books/{id}": {
            "get": {
                "tags": [
                    "Books"
                ],
                "summary": "Get a book by ID",
                "description": "Retrieve a book by its unique ID",
                "operationId": "22b313962ebfb68fe2f323a96dc9e91e",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Book"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Book not found"
                    }
                }
            },
            "put": {
                "tags": [
                    "Books"
                ],
                "summary": "Update a book",
                "description": "Updates a book record",
                "operationId": "471e8ddd754c8f9e34e69f64d1b53eaa",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "The Great Gatsby"
                                    },
                                    "author": {
                                        "type": "string",
                                        "example": "F. Scott Fitzgerald"
                                    },
                                    "status": {
                                        "type": "string",
                                        "example": "completed"
                                    },
                                    "categories": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "currentPage": {
                                        "type": "integer",
                                        "example": 200
                                    },
                                    "cover": {
                                        "type": "string",
                                        "example": "url_to_cover_image"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "A novel about the American dream."
                                    },
                                    "pageCount": {
                                        "type": "integer",
                                        "example": 200
                                    },
                                    "publishedDate": {
                                        "type": "string",
                                        "example": "1925-04-10"
                                    },
                                    "rating": {
                                        "type": "integer",
                                        "example": 5
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Book updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Book"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Book not found"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Books"
                ],
                "summary": "Delete a book",
                "description": "Deletes a book by its ID",
                "operationId": "e3e33d11e322f13055b10ead759d294c",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Book deleted successfully"
                    },
                    "404": {
                        "description": "Book not found"
                    }
                }
            }
        },
        "/api/v1/books/searchTitle": {
            "get": {
                "tags": [
                    "Books"
                ],
                "summary": "Search books by title",
                "description": "Search for books using a partial title match",
                "operationId": "8c8adc98afe56b488d5c94c5b84de0a0",
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Book"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/books/searchAuthor": {
            "get": {
                "tags": [
                    "Books"
                ],
                "summary": "Search books by author",
                "description": "Search for books using a partial author match",
                "operationId": "8b1f45a5fee8ebad22f0a6ae0b9e3ee5",
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Book"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/books/export": {
            "get": {
                "tags": [
                    "Books"
                ],
                "summary": "Export books data",
                "description": "Export book data in CSV or XML format. Returns a downloadable file.",
                "operationId": "ac31985f2825022a731d229dbcd2b913",
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Fields to export (titles, authors, titles_and_authors)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "titles_and_authors",
                            "enum": [
                                "titles",
                                "authors",
                                "titles_and_authors"
                            ]
                        }
                    },
                    {
                        "name": "format",
                        "in": "query",
                        "description": "Export format (csv or xml)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": "csv",
                            "enum": [
                                "csv",
                                "xml"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Exported file (CSV or XML)"
                    },
                    "500": {
                        "description": "Export failed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Export failed: No books found."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Book": {
                "required": [
                    "title",
                    "author"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "The Great Gatsby"
                    },
                    "author": {
                        "type": "string",
                        "example": "F. Scott Fitzgerald"
                    },
                    "status": {
                        "type": "string",
                        "example": "completed"
                    },
                    "categories": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "currentPage": {
                        "type": "integer",
                        "example": 100
                    },
                    "cover": {
                        "type": "string",
                        "example": "url_to_cover_image"
                    },
                    "description": {
                        "type": "string",
                        "example": "A novel about the American dream."
                    },
                    "pageCount": {
                        "type": "integer",
                        "example": 200
                    },
                    "publishedDate": {
                        "type": "string",
                        "example": "1925-04-10"
                    },
                    "rating": {
                        "type": "integer",
                        "example": 4
                    }
                },
                "type": "object"
            }
        }
    }
}